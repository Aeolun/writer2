{
  "name": "@writer/ui",
  "version": "1.0.0",
  "description": "Design system and component library for Writer and Story apps",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:with-types": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "story": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.1",
    "@vanilla-extract/dynamic": "^2.1.2",
    "@vanilla-extract/recipes": "^0.5.5",
    "colord": "^2.9.3"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "devDependencies": {
    "@vanilla-extract/vite-plugin": "^4.0.20",
    "histoire": "^0.17.17",
    "histoire-plugin-solid": "workspace:^",
    "solid-js": "^1.9.9",
    "typescript": "^5.8.3",
    "vite": "^5.4.0",
    "vite-plugin-solid": "^2.10.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  }
}
