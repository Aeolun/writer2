{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"],
  "exclude": ["../../node_modules"]
}
