{
  "name": "writer",
  "private": true,
  "version": "1.0.0",
  "description": "Writer monorepo",
  "pnpm": {
    "overrides": {
      "happy-dom": ">=20.0.0",
      "form-data": ">=4.0.4",
      "esbuild": ">=0.25.0",
      "cookie": ">=0.7.0",
      "path-to-regexp": ">=8.0.0",
      "tmp": ">=0.2.4",
      "fastify": ">=5.3.2",
      "axios": ">=1.12.0",
      "lodash": ">=4.17.21",
      "node-forge": ">=1.3.2",
      "glob": ">=11.1.0",
      "vite": ">=6.3.6",
      "jws": ">=4.0.1",
      "@modelcontextprotocol/sdk": ">=1.24.0",
      "@trpc/server": ">=11.1.1",
      "playwright": ">=1.55.1",
      "mdast-util-to-hast": ">=13.2.1",
      "body-parser": ">=2.2.1",
      "brace-expansion": ">=2.0.2",
      "js-yaml": ">=4.1.1"
    }
  },
  "scripts": {
    "dev": "pnpm build:shared && pnpm -r --parallel dev",
    "dev:reader": "pnpm build:shared && pnpm --filter @writer/reader dev",
    "dev:server": "pnpm build:shared && pnpm --filter @writer/server dev",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @writer/shared build",
    "test": "pnpm -r test"
  },
  "keywords": [],
